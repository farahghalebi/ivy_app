<div class="d-flex justify-content-center align-items-center vh-100">
  <div class="card shadow-lg border-0 w-100" style="max-width: 700px;">
    <div class="card-body">

      <h1 class="text-center mb-3">Chats for <%= @perfume.name %></h1>
      <h3 class="text-center text-muted mb-4">Chats History</h3>

      <div class="mb-4">
        <% if @chats.any? %>
          <ul class="list-group">
            <% @chats.each do |chat| %>
              <li class="list-group-item border-0 d-flex justify-content-between align-items-center">
                <%= link_to chat.title, chat_path(chat), class: "text-decoration-none fw-semibold btn btn-primary btn-lg" %>
              </li>
            <% end %>
          </ul>
        <% else %>
          <p class="text-center text-muted">There are no chats yet.</p>
        <% end %>
      </div>

      <div class="text-center mb-3">
        <%= simple_form_for [@perfume, @chat] do |f| %>
          <%= f.button :submit, "New Chat", class: "btn btn-primary btn-lg" %>
        <% end %>
      </div>

      <div class="text-center">
        <%= link_to "← Back", perfume_path(@perfume), class: "btn btn-secondary" %>
      </div>

    </div>
  </div>
</div>

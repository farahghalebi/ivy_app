<!-- app/views/perfumes/_form.html.erb -->
<%= simple_form_for @perfume do |f| %>
  <%= f.input :name, required: true %>
  <%= f.input :category,
              collection: Perfume::CATEGORIES,
              include_blank: false %>
  <%= f.input :description, as: :text %>
  <%= f.input :url, label: "Product URL" %>
  <%= f.button :submit, "Create perfume", class: "btn btn-purple btn-lg me-2" %>
<% end %>
